generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/koncertek"
}

model Concert {
  id        Int      @id @default(autoincrement())
  performer String
  startTime DateTime
  duration  Int     // percben t√°rolva
  cancelled Boolean @default(false)
}

